{
    "version": 2,
    "builds": [
      {
        "src": "build/*",
        "use": "@vercel/node"
      },
      {
        "src": "public/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/fonts/.*", "dest": "/src/fonts/$1" },
      { "src": "/assets/.*", "dest": "/src/assets/$1" },
      { "src": "/.*", "dest": "/index.html" }
    ],
    "env": {
      "MY_CUSTOM_VARIABLE": "some-value"
    }
  }